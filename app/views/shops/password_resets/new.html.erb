<section class="max-w-md mx-auto py-12">
  <h1 class="text-2xl font-semibold text-center mb-6">
    Reset your password
  </h1>

  <% if flash[:alert] %>
    <div class="mb-4 rounded border border-red-200 bg-red-50 px-4 py-2 text-red-700">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <p class="mb-4 text-sm text-gray-700 text-center">
    Enter the email you use for <%= Current.shop&.name || "MomGo" %> and we'll send reset instructions.
  </p>

  <%= form_with model: @password_reset_request_form, url: shops_password_reset_path, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email, class: "block text-sm font-medium" %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full rounded border px-3 py-2" %>
      <% if @password_reset_request_form.errors[:email].present? %>
        <p class="mt-1 text-sm text-red-600"><%= @password_reset_request_form.errors[:email].to_sentence %></p>
      <% end %>
    </div>

    <%= form.submit "Send reset link", class: "w-full rounded bg-gray-900 px-4 py-2 text-white" %>
  <% end %>

  <p class="mt-6 text-center text-sm">
    <%= link_to "Back to sign in", new_shops_session_path, class: "text-gray-700 underline" %>
  </p>
</section>
